<% layout('layouts/boilerplate') -%>

    <div id="cluster-map" ></div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const geoData = { features: <%-JSON.stringify(campgrounds) %>}
    </script>
   
    <h1>All Campgrounds</h1>
    <% for(campground of campgrounds){ %>
       
        <div class="card mb-3" >
           <div class="row">
                <div class="col-md-4">
                    <% if (campground.images.length) { %>
                        <img class="img-fluid"  crossorigin="anonymous" src="<%= campground.images[0].url %>">  
                    <% } else { %>

                        <img class="img-fluid" crossorigin="anonymous" src="    https://images.unsplash.com/photo-1551830820-330a71b99659?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
                    <% } %>
                </div>
            
                <div class="col-md-8 ">
                    <div class="card-body">
                        <h5 class="card-title"><%=`${campground.title}`%></a></h5>
                        
                        <h6 class="card-subtitle mb-2 text-muted"><%= campground.location%></h6>
                        <p class="card-text"><%= campground.description%></p>
                        <a href = "/campgrounds/<%=campground._id %>" class="btn btn-primary">View <%=`${campground.title}`%></a>
                    </div>
                </div>
            </div> 
        </div>
        
        <% } %>
        
        <script src="/javascripts/indexMap.js"></script>

        
    

        